<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    Title="Rejestr Książek"
    x:Class="rejestrKsiazek.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Label
                FontSize="32"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                Text="Rejestr Książek"
                x:Name="WelcomeLabel" />

            <Label
                FontSize="18"
                HorizontalOptions="Center"
                Text="Dodaj nową książkę" />

            <Entry
                FontSize="16"
                Placeholder="Wprowadź tytuł książki"
                x:Name="tytulTextBox" />

            <Entry
                FontSize="16"
                Placeholder="Wprowadź autora książki"
                x:Name="autorTextBox" />

            <Button
                Clicked="AddBook"
                FontSize="18"
                HorizontalOptions="Center"
                Text="Dodaj książkę" />

            <ListView HeightRequest="300" x:Name="booksListViews">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <VerticalStackLayout
                                    Grid.Column="0"
                                    Spacing="2"
                                    VerticalOptions="Center">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="18"
                                        LineBreakMode="TailTruncation"
                                        Text="{Binding Title}" />
                                    <Label
                                        FontSize="14"
                                        LineBreakMode="TailTruncation"
                                        Text="{Binding Author}"
                                        TextColor="Gray" />
                                </VerticalStackLayout>

                                <Button
                                    Clicked="RemoveBook"
                                    Grid.Column="1"
                                    Text="Usuń" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
